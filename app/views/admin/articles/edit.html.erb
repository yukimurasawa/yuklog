<%= render partial: 'application/header' %>

<main class="p-content">
  
  <div class="p-content__body">
    <div class="p-content__main">
      <div class="p-content__title">
        <h2>
          <span>記事を編集する</span>
        </h2>
      </div>
      <%= form_for(@article, url: admin_article_path(@article), method: :patch) do |f| %>
        <p class="text-form__title">
          <%= f.label :title %>
        </p>
        <p class="text-input__title">
          <%= f.text_field :title %>
        </p>
        <p class="text-form__title">
          <%= f.label :description %>
        </p>
        <p class="text-input__description">
          <%= f.text_area :description %>
        </p>
        <p class="text-form__title">
          <%= f.label :content %>
        </p>
        <div class="text-input__content">
          <%= f.rich_text_area :content %>
        </div>
        <%= f.submit "更新する" %>
    </p>
  <% end %>
    </div>
    <div class="p-content__sub">
      <%= render partial: 'shared/admin_sidebar' %>
    </div>
  </div>
</main>
