<%= render partial: 'application/header' %>

<main class="p-content">
  
  <div class="p-content__body">
    <div class="p-content__main">
      <div class="p-content__title">
        <h2>
          <span>記事一覧</span>
        </h2>
      </div>
        <%- if @articles.present? -%>
          <%- @articles.each do |article| -%>
            <div class="p-article__body">
              <%= link_to(admin_article_path(article)) do%>
                <h4 class="p-article__date">
                  <%= article.created_at.to_s(:datetime_jp) %>
                </h4>
                <h4 class="p-article__title">
                  <%= article.title %>
                </h4>
                <div class="p-article__description">
                  <p><%= article.description %></p>
                </div>
              <%- end -%> 
            </div>
          <%- end -%>
        <%- else -%>
          <h1>記事はありません</h1>
        <%- end -%>
    </div>
    <div class="p-content__sub">
      <%= render partial: 'shared/admin_sidebar' %>
    </div>
  </div>
</main>
