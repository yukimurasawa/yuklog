
<%= render partial: 'application/header' %>

<main class="p-content">
  <div class="p-content__body">
    <div class="p-content__main">
      <div class="p-entry">
        <h1 class="p-entry__title"><%= @article.title %></h1>
        <div class="p-entry__contents">
            <div class="p-entry__description"><%= @article.description %></div>
            <div class="p-entry__body">
              <%= @article.content %>
            </div>
        </div>
      </div>
    </div>
    <div class="p-content__sub">
      <%= render partial: 'shared/sidebar' %>
    </div>
  </div>
</main>

<%= render partial: 'application/footer' %>
